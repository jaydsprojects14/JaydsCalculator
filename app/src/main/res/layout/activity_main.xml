<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="386dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultequation"
        app:layout_constraintVertical_bias="0.83">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/clrbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:backgroundTint="@color/black"
                android:layout_marginRight="10px"
                android:layout_marginLeft="40px"/>

            <Button
                android:id="@+id/openbracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="("

                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/closebracket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=")"

                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/opdiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/"
                 />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/num7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"

                android:layout_marginRight="10px"
                android:layout_marginLeft="40px"/>
            <Button
                android:id="@+id/num8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"

                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/num9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/opmul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                 />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/num4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"

                android:layout_marginRight="10px"
                android:layout_marginLeft="40px"/>
            <Button
                android:id="@+id/num5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"

                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/num6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"

                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/opsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/num1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"

                android:layout_marginRight="10px"
                android:layout_marginLeft="40px"/>
            <Button
                android:id="@+id/num2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"

                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/num3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_marginRight="10px"/>
            <Button
                android:id="@+id/opadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/onBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AC"
                android:layout_marginRight="10px"
                android:layout_marginLeft="40px"
                />
            <Button
                android:id="@+id/num0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginRight="10px"

                android:onClick="datainput"/>
            <Button
                android:id="@+id/decibtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="."
                android:layout_marginRight="10px"
                android:onClick="datainput"/>

            <Button
                android:id="@+id/equalsTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/black"
                android:text="="
                android:layout_marginRight="10px"/>




        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/resultequation"
        android:layout_width="330dp"
        android:layout_height="101dp"
        android:fontFamily="casual"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071" />

    <TextView
        android:id="@+id/inputequation"
        android:layout_width="331dp"
        android:layout_height="118dp"
        android:fontFamily="monospace"
        android:text="0"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultequation"
        app:layout_constraintVertical_bias="0.041" />


</androidx.constraintlayout.widget.ConstraintLayout>


